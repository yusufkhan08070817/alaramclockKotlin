<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <solid android:color="#27000000" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00000000"
                android:centerX="0.1"

                android:endColor="#00000000"
                android:startColor="#DA000000" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00000000"
                android:centerX="0.1"
android:angle="90"
                android:endColor="#00000000"
                android:startColor="#DA000000" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00000000"
                android:centerX="0.1"
                android:angle="180"
                android:endColor="#00000000"
                android:startColor="#DA000000" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#00000000"
                android:centerX="0.1"
                android:angle="270"
                android:endColor="#00000000"
                android:startColor="#DA000000" />

        </shape>
    </item>
</layer-list>

